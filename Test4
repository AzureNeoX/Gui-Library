 Players = game:GetService("Players")
 LocalPlayer = Players.LocalPlayer

-- GUI
 gui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
gui.Name = "WelcomeMiniGUI"
gui.ResetOnSpawn = false

-- Main Frame
 mainFrame = Instance.new("Frame", gui)
mainFrame.Size = UDim2.new(0, 180, 0, 220)
mainFrame.Position = UDim2.new(0.05, 0, 0.4, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
mainFrame.Visible = true
mainFrame.Active = true
mainFrame.Draggable = true
Instance.new("UICorner", mainFrame)

-- Title
 title = Instance.new("TextLabel", mainFrame)
title.Size = UDim2.new(1, 0, 0, 25)
title.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
title.Text = "ðŸ’  Welcome ðŸ’ "
title.TextColor3 = Color3.fromRGB(255, 221, 85)
title.Font = Enum.Font.GothamBold
title.TextScaled = true

-- Scroll Frame
 scroll = Instance.new("ScrollingFrame", mainFrame)
scroll.Size = UDim2.new(1, -10, 1, -35)
scroll.Position = UDim2.new(0, 5, 0, 30)
scroll.BackgroundColor3 = Color3.fromRGB(38, 38, 50)
scroll.ScrollBarThickness = 5
scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
scroll.BorderSizePixel = 0

 layout = Instance.new("UIListLayout", scroll)
layout.SortOrder = Enum.SortOrder.LayoutOrder
layout.Padding = UDim.new(0, 4)

-- Add Button Function
 function addButton(name, callback)
	 btn = Instance.new("TextButton", scroll)
	btn.Size = UDim2.new(1, 0, 0, 26)
	btn.BackgroundColor3 = Color3.fromRGB(65, 110, 180)
	btn.TextColor3 = Color3.fromRGB(255, 230, 100)
	btn.Font = Enum.Font.GothamBold
	btn.TextScaled = true
	btn.Text = name
	Instance.new("UICorner", btn)

	btn.MouseButton1Click:Connect(callback)
end

-- Example Buttons
addButton("Say Hello", function()
	print("Hello from Mini GUI!")
end)

-- Open/Close Toggle Button
 toggleBtn = Instance.new("TextButton", gui)
toggleBtn.Size = UDim2.new(0, 28, 0, 28)
toggleBtn.Position = UDim2.new(0.015, 0, 0.37, 0)
toggleBtn.BackgroundColor3 = Color3.fromRGB(65, 110, 180)
toggleBtn.Text = "ðŸŸ©"
toggleBtn.TextColor3 = Color3.fromRGB(255, 230, 100)
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.TextScaled = true
Instance.new("UICorner", toggleBtn)

 visible = true
toggleBtn.MouseButton1Click:Connect(function()
	visible = not visible
	mainFrame.Visible = visible
end)
